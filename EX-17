#!/usr/bin/env python3
"""
DES implementation (single-block, ECB style).
Key schedule uses standard left shifts; for decryption the 16 subkeys are used in reverse order.

Note: This is educational code (not optimized). It operates on 64-bit blocks (hex strings).
"""

from typing import List

# --- DES tables (standard) -------------------------------------------------
IP = [
    58, 50, 42, 34, 26, 18, 10, 2,
    60, 52, 44, 36, 28, 20, 12, 4,
    62, 54, 46, 38, 30, 22, 14, 6,
    64, 56, 48, 40, 32, 24, 16, 8,
    57, 49, 41, 33, 25, 17, 9,  1,
    59, 51, 43, 35, 27, 19, 11, 3,
    61, 53, 45, 37, 29, 21, 13, 5,
    63, 55, 47, 39, 31, 23, 15, 7
]

FP = [
    40, 8, 48, 16, 56, 24, 64, 32,
    39, 7, 47, 15, 55, 23, 63, 31,
    38, 6, 46, 14, 54, 22, 62, 30,
    37, 5, 45, 13, 53, 21, 61, 29,
    36, 4, 44, 12, 52, 20, 60, 28,
    35, 3, 43, 11, 51, 19, 59, 27,
    34, 2, 42, 10, 50, 18, 58, 26,
    33, 1, 41, 9,  49, 17, 57, 25
]

E = [
    32, 1, 2, 3, 4, 5,
    4, 5, 6, 7, 8, 9,
    8, 9, 10,11,12,13,
    12,13,14,15,16,17,
    16,17,18,19,20,21,
    20,21,22,23,24,25,
    24,25,26,27,28,29,
    28,29,30,31,32,1
]

P = [
    16, 7, 20, 21,
    29,12,28,17,
    1, 15,23,26,
    5, 18,31,10,
    2, 8, 24,14,
    32,27,3, 9,
    19,13,30,6,
    22,11,4,25
]

PC_1 = [
    57,49,41,33,25,17,9,
    1, 58,50,42,34,26,18,
    10,2, 59,51,43,35,27,
    19,11,3, 60,52,44,36,
    63,55,47,39,31,23,15,
    7, 62,54,46,38,30,22,
    14,6, 61,53,45,37,29,
    21,13,5, 28,20,12,4
]

PC_2 = [
    14,17,11,24,1,5,
    3,28,15,6,21,10,
    23,19,12,4,26,8,
    16,7,27,20,13,2,
    41,52,31,37,47,55,
    30,40,51,45,33,48,
    44,49,39,56,34,53,
    46,42,50,36,29,32
]

# Standard left rotations per round for key schedule
SHIFT_SCHEDULE = [1, 1, 2, 2, 2, 2, 2, 2, 1, 2, 2, 2, 2, 2, 2, 1]

# S-boxes: 8 boxes, each 4x16 table represented as a flat list of 64 entries.
S_BOXES = [
# S1
[
    14,4,13,1,2,15,11,8,3,10,6,12,5,9,0,7,
    0,15,7,4,14,2,13,1,10,6,12,11,9,5,3,8,
    4,1,14,8,13,6,2,11,15,12,9,7,3,10,5,0,
    15,12,8,2,4,9,1,7,5,11,3,14,10,0,6,13
],
# S2
[
    15,1,8,14,6,11,3,4,9,7,2,13,12,0,5,10,
    3,13,4,7,15,2,8,14,12,0,1,10,6,9,11,5,
    0,14,7,11,10,4,13,1,5,8,12,6,9,3,2,15,
    13,8,10,1,3,15,4,2,11,6,7,12,0,5,14,9
],
# S3
[
    10,0,9,14,6,3,15,5,1,13,12,7,11,4,2,8,
    13,7,0,9,3,4,6,10,2,8,5,14,12,11,15,1,
    13,6,4,9,8,15,3,0,11,1,2,12,5,10,14,7,
    1,10,13,0,6,9,8,7,4,15,14,3,11,5,2,12
],
# S4
[
    7,13,14,3,0,6,9,10,1,2,8,5,11,12,4,15,
    13,8,11,5,6,15,0,3,4,7,2,12,1,10,14,9,
    10,6,9,0,12,11,7,13,15,1,3,14,5,2,8,4,
    3,15,0,6,10,1,13,8,9,4,5,11,12,7,2,14
],
# S5
[
    2,12,4,1,7,10,11,6,8,5,3,15,13,0,14,9,
    14,11,2,12,4,7,13,1,5,0,15,10,3,9,8,6,
    4,2,1,11,10,13,7,8,15,9,12,5,6,3,0,14,
    11,8,12,7,1,14,2,13,6,15,0,9,10,4,5,3
],
# S6
[
    12,1,10,15,9,2,6,8,0,13,3,4,14,7,5,11,
    10,15,4,2,7,12,9,5,6,1,13,14,0,11,3,8,
    9,14,15,5,2,8,12,3,7,0,4,10,1,13,11,6,
    4,3,2,12,9,5,15,10,11,14,1,7,6,0,8,13
],
# S7
[
    4,11,2,14,15,0,8,13,3,12,9,7,5,10,6,1,
    13,0,11,7,4,9,1,10,14,3,5,12,2,15,8,6,
    1,4,11,13,12,3,7,14,10,15,6,8,0,5,9,2,
    6,11,13,8,1,4,10,7,9,5,0,15,14,2,3,12
],
# S8
[
    13,2,8,4,6,15,11,1,10,9,3,14,5,0,12,7,
    1,15,13,8,10,3,7,4,12,5,6,11,0,14,9,2,
    7,11,4,1,9,12,14,2,0,6,10,13,15,3,5,8,
    2,1,14,7,4,10,8,13,15,12,9,0,3,5,6,11
]
]

# --- Utilities -------------------------------------------------------------
def hex_to_bitlist(hexstr: str) -> List[int]:
    """Convert hex string (like '0123456789ABCDEF') to list of 64 bits (0/1)."""
    # strip spaces
    hexstr = hexstr.replace(" ", "")
    # pad if needed
    if len(hexstr) % 2 != 0:
        hexstr = "0" + hexstr
    bits = []
    for ch in hexstr:
        val = int(ch, 16)
        for i in range(4)[::-1]:
            bits.append((val >> i) & 1)
    return bits

def bitlist_to_hex(bits: List[int]) -> str:
    """Convert list of bits to hex string (uppercase)."""
    # pad to multiple of 4
    out = []
    for i in range(0, len(bits), 4):
        nib = bits[i:i+4]
        val = 0
        for b in nib:
            val = (val << 1) | b
        out.append("{:X}".format(val))
    return "".join(out)

def permute(block: List[int], table: List[int]) -> List[int]:
    """Generic permutation. Table entries are 1-based positions."""
    return [block[i-1] for i in table]

def left_rotate(lst: List[int], n: int) -> List[int]:
    return lst[n:] + lst[:n]

# --- Key schedule ----------------------------------------------------------
def generate_round_keys(key64_hex: str) -> List[List[int]]:
    """
    Generate 16 round keys (each 48 bits) from 64-bit key (hex string).
    Parity bits in the 64-bit key are ignored (PC-1 drops them).
    Returns list [K1, K2, ..., K16] where each Ki is a list of 48 bits.
    """
    key_bits = hex_to_bitlist(key64_hex)
    if len(key_bits) != 64:
        raise ValueError("Key must be 64 bits (16 hex digits).")
    # Apply PC-1 -> 56 bits
    permuted = permute(key_bits, PC_1)  # returns 56 bits
    C = permuted[:28]
    D = permuted[28:]
    round_keys = []
    for shift in SHIFT_SCHEDULE:
        C = left_rotate(C, shift)
        D = left_rotate(D, shift)
        combined = C + D  # 56 bits
        Ki = permute(combined, PC_2)  # 48 bits
        round_keys.append(Ki)
    return round_keys

# --- DES round function ---------------------------------------------------
def sbox_substitution(bits48: List[int]) -> List[int]:
    """Apply 8 S-boxes to 48-bit input and return 32-bit output (as list)."""
    out = []
    for i in range(8):
        block6 = bits48[i*6:(i+1)*6]
        row = (block6[0] << 1) | block6[5]
        col = (block6[1] << 3) | (block6[2] << 2) | (block6[3] << 1) | block6[4]
        sval = S_BOXES[i][row*16 + col]
        # convert sbox output (0-15) to 4 bits
        for b in range(3, -1, -1):
            out.append((sval >> b) & 1)
    return out

def feistel(R: List[int], K: List[int]) -> List[int]:
    """DES F function: expand R (32->48), XOR with K, S-box, then P permute."""
    expanded = permute(R, E)          # 48 bits
    xored = [a ^ b for a, b in zip(expanded, K)]
    sboxed = sbox_substitution(xored) # 32 bits
    permuted = permute(sboxed, P)     # 32 bits
    return permuted

# --- Block encrypt/decrypt -------------------------------------------------
def des_encrypt_block(plaintext_hex: str, round_keys: List[List[int]]) -> str:
    """Encrypt single 64-bit block (hex string) using provided round keys K1..K16."""
    bits = hex_to_bitlist(plaintext_hex)
    if len(bits) != 64:
        raise ValueError("Plaintext block must be 64 bits (16 hex digits).")
    permuted = permute(bits, IP)
    L = permuted[:32]
    R = permuted[32:]
    # 16 rounds
    for k in round_keys:
        newR = [l ^ f for l, f in zip(L, feistel(R, k))]
        L, R = R, newR
    # final: concatenate R and L (note swap)
    preoutput = R + L
    cipher_bits = permute(preoutput, FP)
    return bitlist_to_hex(cipher_bits)

def des_decrypt_block(ciphertext_hex: str, round_keys: List[List[int]]) -> str:
    """Decrypt single 64-bit block by applying round keys in reverse order."""
    # For decryption we use keys reversed
    rev_keys = list(reversed(round_keys))
    return des_encrypt_block(ciphertext_hex, rev_keys)

# --- Simple demo using known test vector ----------------------------------
if __name__ == "__main__":
    # Example (FIPS): key=133457799BBCDFF1, plaintext=0123456789ABCDEF -> ciphertext=85E813540F0AB405
    key_hex = "133457799BBCDFF1"
    pt_hex = "0123456789ABCDEF"
    print("Key (hex)      :", key_hex)
    print("Plaintext (hex):", pt_hex)
    keys = generate_round_keys(key_hex)
    ct = des_encrypt_block(pt_hex, keys)
    print("Encrypted (hex):", ct)
    # Decrypt
    recovered = des_decrypt_block(ct, keys)
    print("Decrypted (hex):", recovered)
    # Verify
    if recovered.upper() == pt_hex.upper():
        print("Success: decrypted plaintext matches original.")
    else:
        print("Mismatch: decryption failed.")
